datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                Int        @id @default(autoincrement())
  email             String     @unique
  gmailRefreshToken String?    @map("gmail_refresh_token")
  dailyLimitUsage   Int        @default(0) @map("daily_limit_usage")
  campaigns         Campaign[]
  workflows         Workflow[]
}

model Campaign {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  status      String
  totalLeads  Int       @map("total_leads")
  sentCount   Int       @default(0) @map("sent_count")
  scheduledAt DateTime? @map("scheduled_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  logs        Log[]
}

model Workflow {
  id            Int      @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  userId        Int
  // JSON is not supported by SQLite connector in Prisma; store as text for dev
  triggerConfig String   @map("trigger_config")
  steps         String
  createdAt     DateTime @default(now()) @map("created_at")
}

model Log {
  id         Int      @id @default(autoincrement())
  campaign   Campaign @relation(fields: [campaignId], references: [id])
  campaignId Int
  status     String
  message    String
  createdAt  DateTime @default(now()) @map("created_at")
}
